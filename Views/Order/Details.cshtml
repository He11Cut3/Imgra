@model List<ImgR.Models.Order>

<section class="breadcrumb-part">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <div class="breadcrumb-title">
                    <h1>История заказов</h1>
                </div>
            </div>
        </div>
        <div class="breadcrumb-link">
            <ul class="flat-list">
                <li><a>Главная страница</a></li>
                <li><a>История заказов</a></li>
            </ul>
        </div>
    </div>
</section>
<section class="contuct-bottom">
    <div class="container">
        <div class="row">
            <div class="col-xl-8">
                <div class="con-bottom-inner">
                    @if (Model != null && Model.Any())
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Имя</th>
                                    <th>Email</th>
                                    <th>Дата</th>
                                    <th>Время</th>
                                    <th>Сервис</th>
                                    <th>Телефон</th>
                                    <th>Сообщение</th>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <th>Имя пользователя</th>
                                        <th>Email пользователя</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>@order.Name</td>
                                        <td>@order.Email</td>
                                        <td>@order.Date.ToShortDateString()</td>
                                        <td>@order.Time</td>
                                        <td>@order.Service</td>
                                        <td>@order.Phone</td>
                                        <td class="message-column"> @Html.Raw(order.Message)</td>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <td>@order.User.UserName</td>
                                            <td>@order.User.Email</td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>У вас нет заказов.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .message-column {
        max-width: 200px; /* Установите максимальную ширину столбца "Message" */
        overflow: hidden;
        text-overflow: ellipsis; /* Добавляет многоточие, если текст выходит за границы */
        white-space: nowrap; /* Запрещает перенос текста */
    }
</style>
